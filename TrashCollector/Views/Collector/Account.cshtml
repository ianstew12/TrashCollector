@model TrashCollector.Models.CollectorsViewModel

@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    Welcome,  @Model.user.firstName @Model.user.lastName!
</h2>



<a>
    Your routes today:
    @if (!(Model.customersToday == null))
    {
        foreach (var user in Model.customersToday)
        {
            <a>
                Customer Id: @Model.user.Id
                Address: @Model.user.streetAddress 

            </a>
        }
    }


    <input type="button" class="btn btn-info" value="Confirm Today's Collections Completed'"
           onclick="location.href='@Url.Action("UpdateBalances", "Collector",  Model)'" />


</a>
