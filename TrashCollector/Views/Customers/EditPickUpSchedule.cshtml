@model TrashCollector.Models.ApplicationUser
@{
    ViewBag.Title = "CustomerEditPickUpSchedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderPartial("_PickUpSchedule", Model);}
<h2> Change Schedule: </h2>


@using (Html.BeginForm("EditPickUpInfo", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.pickUpSchedule.weeklyPickUpDay, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.pickUpSchedule.weeklyPickUpDay, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.pickUpSchedule.noPickUpsStart, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.pickUpSchedule.noPickUpsEnd, new { @class = "form-control" })
        </div>
    </div>

}
<a href="~/Views/Customers/EditPickUpSchedule.cshtml">~/Views/Customers/EditPickUpSchedule.cshtml</a>

